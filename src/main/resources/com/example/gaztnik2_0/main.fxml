<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gaztnik2_0.ui.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="productNameField" promptText="Product Name"/>
    <TextField fx:id="productTypeField" promptText="Product Type"/>
    <TextField fx:id="productQuantityField" promptText="Product Quantity"/>

    <Button text="Add Product" onAction="#handleAddProduct"/>
</VBox>
